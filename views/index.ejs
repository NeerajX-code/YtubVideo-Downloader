<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>YouTube Downloader</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'General Sans', sans-serif;
    }

    html,
    body {
      height: 100%;
      width: 100%;
    }

    ::-webkit-scrollbar {
      display: none;
    }

    main {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #232526 0%, #414345 100%);
      transition: all 0.6s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .sec1 {
      width: clamp(300px, 90%, 400px);
      display: flex;
      gap: 10px;
      align-items: center;
      text-align: center;
      flex-direction: column;
      max-height: 550px;
      vertical-align: middle;
      background: linear-gradient(135deg, #30343b 0%, #434e43 100%);
      border-radius: 10px;
      overflow-y: auto;
      padding: 20px;
    }

    h1 {
      display: flex;
      align-items: center;
      color: white;
      position: fixed;
      top: 2%;
      font-size: clamp(1rem, 4vw, 1.8rem);
    }

    h1 img {
      width: clamp(60px, 40px, 80px);
    }

    input,
    select,
    button {
      color: white;
      background: linear-gradient(135deg, #30343b 0%, #434e43 100%);
      padding: 10px;
      font-size: clamp(0.8rem, 2vw, 1.2rem);
      margin: 8px;
      width: 90%;
      border-radius: 5px;
      border: 1px solid #999;
    }

    option {
      background: #30343b;
      color: white;
    }

    input:focus,
    select:focus {
      border-color: #4CAF50;
      outline: none;
    }

    button {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      background: linear-gradient(90deg, #36bd63 0%, #1ea88f 100%);
      color: white;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.19, 1, 0.22, 1);
      border: none;
    }

    button:hover {
      background: linear-gradient(90deg, #36d1c4 0%, #5b86e5 100%);
      transform: translateY(-2px) scale(0.95);
    }

    button img {
      width: 20px;
      height: 20px;
      filter: invert(1);
    }

    .theme,
    .sky-theme {
      width: fit-content;
      position: fixed;
      bottom: 2%;
      right: 2%;
      padding: 10px;
      border-radius: 5px;
      cursor: pointer;
      font-size: clamp(0.8rem, 2vw, 1.2rem);
      transition: all 0.3s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .theme {
      background: #ff6a06 !important;
      color: white;
    }

    .sky-theme {
      background: linear-gradient(135deg, #232526 0%, #414345 100%) !important;
      color: white;
    }

    .sky-theme:hover {
      background: linear-gradient(135deg, #ff6a06 0%, #ffb347 100%);
    }

    #progressBar {
      width: 90%;
      max-width: 400px;
      height: 20px;
      background: #ddd;
      border-radius: 10px;
      overflow: hidden;
      margin: 20px auto;
      display: none;
    }

    #progressBar div {
      height: 100%;
      width: 0%;
      background: seagreen;
      transition: width 0.2s;
    }

    #preview {
      width: clamp(300px, 90%, 400px);
      display: none;
      text-align: center;
      color: white;
      flex-direction: column;
      gap: 10px;
      align-items: baseline;
    }

    #thumb {
      max-width: 100%;
      border-radius: 10px;
    }

    #preview h2 {
      font-size: clamp(1rem, 2vw, 1.5rem);
      margin: 10px 0;
    }

    #spinner {
      display: none;
      margin: 10px;
      border: 4px solid #f3f3f3;
      border-top: 4px solid #36bd63;
      border-radius: 50%;
      width: 30px;
      height: 30px;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }

    #errorBox {
      color: #ff4d4d;
      margin: 10px;
      display: none;
    }
  </style>
</head>

<body>
  <main>
    <div class="sec1">
      <h1>
        <img src="assets/youtube.svg" alt=""> YouTube Video Downloader
      </h1>
      <button onclick="changetheme()" class="theme">Change theme</button>

      <input type="text" id="url" placeholder="Paste YouTube URL" />
      <button onclick="fetchInfo()">Fetch Info</button>
      <div id="spinner"></div>
      <div id="errorBox"></div>

      <select id="quality">
        <option value="18">360p</option>
        <option value="22">720p</option>
      </select>

      <div id="preview">
        <img id="thumb" />
        <h2 id="title"></h2>
        <p><strong>Channel:</strong> <span id="channel"></span></p>
        <p><strong>Duration:</strong> <span id="duration"></span></p>
      </div>

      <button onclick="download('video')">
        <img src="assets/video.svg" alt=""> Download Video
      </button>
      <button onclick="download('audio')">
        <img src="assets/audio.svg" alt=""> Download Audio
      </button>

      <div id="progressBar">
        <div></div>
      </div>
    </div>
  </main>

  <script>
    let isSkyTheme = true;

    function changetheme() {
      const main = document.querySelector("main");
      const buttons = document.querySelectorAll("button");
      const themeBtn = document.querySelector('.theme') || document.querySelector('.sky-theme');

      if (isSkyTheme) {
        main.style.background = 'linear-gradient(135deg, #6dd5ed 0%, #2193b0 100%)';
        buttons.forEach(btn => {
          btn.style.background = 'linear-gradient(135deg, #ff6a06 0%, #ffb347 100%)';
        });
        themeBtn.classList.replace('theme', 'sky-theme');
        isSkyTheme = false;
      } else {
        main.style.background = 'linear-gradient(135deg, #232526 0%, #414345 100%)';
        buttons.forEach(btn => {
          btn.style.background = '';
        });
        themeBtn.classList.replace('sky-theme', 'theme');
        isSkyTheme = true;
      }
    }

    async function fetchInfo() {
      const url = document.getElementById('url').value.trim();
      const spinner = document.getElementById('spinner');
      const preview = document.getElementById('preview');
      const errorBox = document.getElementById('errorBox');

      if (!url) return;

      // Reset states
      spinner.style.display = 'block';
      errorBox.style.display = 'none';
      preview.style.display = 'none';

      try {
        const backend =
          location.hostname === "localhost"
            ? "http://localhost:4000"
            : "https://videodownloader-im1g.onrender.com";

        const res = await fetch(`${backend}/info?url=${encodeURIComponent(url)}`);
        if (!res.ok) throw new Error(await res.text());
        const data = await res.json();

        // ✅ Populate preview UI
        document.getElementById('title').textContent = data.title;
        document.getElementById('thumb').src = data.thumbnail;
        document.getElementById('channel').textContent = `Channel: ${data.channel}`;
        document.getElementById('duration').textContent = `Duration: ${data.duration}`;

        preview.style.display = 'block';
      } catch (err) {
        errorBox.textContent = `⚠️ ${err.message}`;
        errorBox.style.display = 'block';
      } finally {
        spinner.style.display = 'none';
      }
    }


    function download(type) {
      const url = document.getElementById('url').value;
      const quality = document.getElementById('quality').value;

      if (!url) return alert('Please enter a URL.');
      const backend = "https://videodownloader-im1g.onrender.com";

      const link = document.createElement('a');
      link.href = `${backend}/download?url=${encodeURIComponent(url)}&quality=${quality}&type=${type}`;
      link.click();
    }
  </script>
</body>

</html>

